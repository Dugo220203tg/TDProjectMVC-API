@model IEnumerable<TDProjectMVC.ViewModels.WishListVM>

<a class="dropdown-togglee" data-toggle="dropdown" aria-expanded="true">
    <i class="fa fa-heart-o"></i>
    <span>Your Wishlist</span>
    <div class="Sl-WishList" style="
    position: absolute;
    right: 15px;
    top: -10px;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    border-radius: 50%;
    font-size: 10px;
    color: #FFF;
    background-color: #D10024;">
        @Model.Count()
    </div>
</a>

<div class="wish-dropdown">
    <div class="wish-list" style="
    position: absolute;
    width: 300px;
    background: #FFF;
    padding: 15px;
    -webkit-box-shadow: 0px 0px 0px 2px #E4E7ED;
    box-shadow: 0px 0px 0px 2px #E4E7ED;
    z-index: 99;
    right: 0;
    opacity: 0;
    visibility: hidden;">
        @foreach (var item in Model)
        {
            @if (item != null && item.TenHH != null)
            {
                <div class="product-widget " style="border-bot: 1px solid #E4E7ED">
                    <div class="product-img" style="width:60px;height:60px">
                        <img src="~/Hinh/Hinh/HangHoa/@item.Hinh" alt="@item.TenHH" style="width:60px;height:60px">
                    </div>
                    <div class="product-body">
                        <h2 class="product-name"><a href="#">@item.TenHH</a></h2>
                        <h4 class="product-price"><span class="qty">@item.TenNCC x</span>$@item.DonGia</h4>
                    </div>
                    <button class="delete"><i class="fa fa-close"></i></button>
                </div>
            }
        }
    </div>
</div>
